@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}
<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-primary"> Create New Role</a>
<br />
<br />

@if (Model?.Count() > 0)
{
    <table class="mt-5 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M => M.Id)</th>
                <th>@Html.DisplayNameFor(M => M.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <partial model="@user.Id.ToString()" name="_ActionButtonPartialView" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>
            There is No Roles .....
        </h3>
    </div>
}