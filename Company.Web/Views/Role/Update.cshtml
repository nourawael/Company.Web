@model RoleUpdateViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Edit Role</h1>
<br />
<br />
<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Role">
            <input hidden asp-for="Id" />
            <partial name="PartialViews/CreateEditPartialView" model="@Model" />

            <div>
                <a class="btn btn-info" asp-action="AddOrRemoveUers" asp-controller="Role" asp-route-roleId="@Model"></a>
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To list</a>
        </form>
    </div>
</div>