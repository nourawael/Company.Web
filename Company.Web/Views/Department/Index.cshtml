@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}
<a asp-controller="Department" asp-action="Create" class=" btn btn-primary"> Create New Department</a>
@if (Model.Count()>0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                <th>Details</th>
                <th>Details</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreateAt</td>
                    <partial name="_ActionButtonPartialView" model="@department.Id.ToString()" />
                </tr>

            }
        </tbody>

    </table>
}
else
{
<div>
    <h3>
        There is No Departments
    </h3>
</div>    
}
