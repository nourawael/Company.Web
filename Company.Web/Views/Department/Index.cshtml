
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<a asp-controller="Department" asp-action="Create" class=" btn btn-primary"> Create New Department</a>
@if (Model.Count()>0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                <th>Details</th>
                <th>Details</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreateAt</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Delete
                        </a>
                    </td>
                </tr>

            }
        </tbody>

    </table>
}
else
{
<div>
    <h3>
        There is No Departments
    </h3>
</div>    
}
