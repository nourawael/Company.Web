@model Department
@{
    ViewData["Tilte"] = "Update";
}
<h>Edit Department</h>
<br />
<br />
<form asp-action="Update">
    <div asp-asp-validation-summary="All">
        <div class="form-group">
            <label class="col-form-label" asp-for="Code"></label>
            <input type="text" asp-for="Code" class="form-control" />
