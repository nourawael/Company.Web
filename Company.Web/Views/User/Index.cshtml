@model IEnumerable<ApplicationUser>

<h1>All Users</h1>
<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="User">
    <div class="row">
        <div class="col-sm-8">
            <input class="form-control" name="SearchInp" placeholder="Search By Email" />
        </div>
        <div class="col-sm-4">
            <input type="submit" class="form-control" class="btn btn-success btn-block" value="Search" />
        </div>
    </div>
</form>
@if (Model?.Count() > 0)
{
    <table class="mt-5 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M => M.Id)</th>
                <th>@Html.DisplayNameFor(M => M.UserName)</th>
                <th>@Html.DisplayNameFor(M => M.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <partial model="@user.Id.ToString()" name="_ActionButtonPartialView" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>
            There is No Users .....
        </h3>
    </div>
}