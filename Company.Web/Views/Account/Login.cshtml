@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Login</h1>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All"> </div>
    
    <input type="email" asp-for="Email" placeholder="Email" class="form-control" />
    <span asp-validation-for="Email"></span>
    <br />
    <input type="password" asp-for="Password" placeholder="Password" class="form-control" />
    <span asp-validation-for="Password"></span>
    <br />
   
    <div class="wthree-text">
        <label class="anim">
            <input type="checkbox" required="" asp-for="RememberMe"/>
            <span>Keep Me Signed In</span>
        </label>
        <div class="clear"></div>
    </div>
    <input type="submit" value="Login" class="btn btn-primary" />
</form>

<p class="text-white">Don't have an Account? <a asp-action="SignUp">SignUp Now</a> </p>
<p class="text-white"><a asp-action="ForgetPassword">Forget Password!</a></p>